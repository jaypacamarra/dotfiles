#!/bin/bash

# Usage:
#   ./desktop_entry add /path/to/binary "App Name" [/path/to/icon.png]
#   ./desktop_entry del "App Name"

ACTION="$1"
shift

DESKTOP_DIR="$HOME/.local/share/applications"

# Sanitize app name to make a valid filename
sanitize_name() {
  echo "$1" \
    | sed 's/^[[:space:]]*//;s/[[:space:]]*$//' \
    | tr ' ' '_' \
    | tr -cd '[:alnum:]_.-'
}

add_entry() {
  BIN_PATH="$1"
  APP_NAME="$2"
  ICON_PATH="$3"

  if [[ -z "$BIN_PATH" || ! -x "$BIN_PATH" ]]; then
    echo "âŒ Error: Please provide a valid executable path."
    exit 1
  fi

  if [[ -z "$APP_NAME" ]]; then
    echo "âŒ Error: Please provide a valid app name."
    exit 1
  fi

  SANITIZED_NAME="$(sanitize_name "$APP_NAME")"
  DESKTOP_FILE="$DESKTOP_DIR/${SANITIZED_NAME}.desktop"

  mkdir -p "$DESKTOP_DIR"

  cat > "$DESKTOP_FILE" <<EOF
[Desktop Entry]
Type=Application
Name=$APP_NAME
Exec=$BIN_PATH
Icon=$ICON_PATH
Terminal=false
Categories=Utility;
EOF

  chmod +x "$DESKTOP_FILE"
  echo "âœ… .desktop entry created at: $DESKTOP_FILE"
}

delete_entry() {
  APP_NAME="$1"

  if [[ -z "$APP_NAME" ]]; then
    echo "âŒ Error: Please provide the app name to delete."
    exit 1
  fi

  SANITIZED_NAME="$(sanitize_name "$APP_NAME")"
  DESKTOP_FILE="$DESKTOP_DIR/${SANITIZED_NAME}.desktop"

  if [[ -f "$DESKTOP_FILE" ]]; then
    rm "$DESKTOP_FILE"
    echo "ðŸ—‘ï¸ Deleted: $DESKTOP_FILE"
  else
    echo "âš ï¸ No .desktop entry found for: $APP_NAME"
  fi
}

case "$ACTION" in
  add)
    add_entry "$@"
    ;;
  del)
    delete_entry "$@"
    ;;
  *)
    echo "âŒ Invalid usage."
    echo "Usage:"
    echo "  $0 add /path/to/binary \"App Name\" [/path/to/icon.png]"
    echo "  $0 del \"App Name\""
    exit 1
    ;;
esac
